<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <global>

        <constant>
            <constant-name>numeros</constant-name>
            <constant-value>^\d{5}$</constant-value>
        </constant>

        <constant>
            <constant-name>masc-valor-monetario</constant-name>
            <constant-value>^\d{1,4}(,\d{2})?$</constant-value>
        </constant>

    </global>

    <formset>

        <form name="reserva">
           <field property="enderecoEmail" depends="required,email">
              <arg0 key="prompt.enderecoEmail"/>
           </field>

           <field property="cor" depends="required">
              <arg0 key="prompt.cor"/>
           </field>

           <field property="portas" depends="required">
              <arg0 key="prompt.portas"/>
           </field>

           <field property="valorLocacao" depends="required,mask">
              <arg0 key="prompt.valorLocacao"/>
              <var>
                 <var-name>mask</var-name>
                 <var-value>${masc-valor-monetario}</var-value>
              </var>
           </field>

           <field property="dataLocacao" depends="required,date">
              <arg0 key="prompt.dataLocacao"/>
              <var>
                 <var-name>datePatternStrict</var-name>
                 <var-value>dd/MM/yyyy</var-value>
              </var>
           </field>

           <field property="agencia" depends="required">
              <arg0 key="prompt.agencia"/>
           </field>

        </form>

    </formset>

</form-validation>
